<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/colorStripTop"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#348e91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#348E91"
        android:contentDescription="@string/btnBack_desc"
        app:icon="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintBottom_toBottomOf="@+id/colorStripTop"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="@+id/colorStripTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Dar de alta VIP"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/colorStripTop"
        app:layout_constraintEnd_toEndOf="@+id/colorStripTop"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/colorStripTop" />

    <include
        layout="@layout/toolbar_layout"
        android:elevation="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="151dp"
        android:layout_height="120dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transferencia" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tarjeta" />
    </RadioGroup>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="205dp"
        android:layout_height="60dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/background_border"
        android:editable="true"
        android:importantForAccessibility="no"
        android:inputType="text"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text=""
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorStripTop" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="78dp"
        android:layout_height="27dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="52dp"
        android:text="Nombre:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorStripTop" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="340dp"
        android:text="Pago:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorStripTop" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="205dp"
        android:layout_height="60dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/background_border"
        android:editable="true"
        android:importantForAccessibility="no"
        android:inputType="text"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text=""
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="200dp"
        android:text="ID Usuario:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorStripTop" />

    <Button
        android:id="@+id/button2"
        android:layout_width="237dp"
        android:layout_height="58dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#348E91"
        android:text="Confirmar y pagar"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>