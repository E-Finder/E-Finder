<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <View
        android:id="@+id/colorStripTop"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#348e91"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-74dp" />

    <include
        android:id="@+id/includeInicio"
        layout="@layout/toolbar_layout"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textViewInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto"
        android:text="E-FINDER"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/colorStripTop"
        app:layout_constraintTop_toTopOf="@+id/colorStripTop" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewShow"
        android:layout_width="407dp"
        android:layout_height="238dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonRuta"
        app:layout_constraintVertical_bias="0.235" />

    <ImageButton
        android:id="@+id/imageButtonDestacada"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/todo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInicio"
        app:srcCompat="@drawable/fest" />

    <ImageButton
        android:id="@+id/imageButtonRuta"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/todo"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonDestacada"
        app:srcCompat="@drawable/ruta"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textViewRecomendadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="204dp"
        android:text="Recomendadas"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewValoradas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="364dp"
        android:text="Mejor Valoradas"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonLlave"
        android:layout_width="27dp"
        android:layout_height="23dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/llavesc"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="373dp"
        tools:layout_editor_absoluteY="35dp" />

    <TextView
        android:id="@+id/textViewSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="36dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
